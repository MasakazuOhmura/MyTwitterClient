<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tw__composer_white"
    android:orientation="horizontal"
    android:padding="@dimen/margin_medium">

    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="@dimen/margin_medium"
        android:background="@color/tw__blue_default"
        android:src="@drawable/tw__ic_logo_default" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/margin_tiny"
            android:textColor="@color/tw__composer_black"
            android:textStyle="bold"
            tools:text="くみよ" />

        <TextView
            android:id="@+id/user_screen_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/user_name"
            android:textColor="@color/tw__composer_deep_gray"
            tools:text="kuma_hidamari" />

        <TextView
            android:id="@+id/tweet_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@id/user_name"
            android:layout_marginTop="@dimen/margin_tiny"
            android:textColor="@color/tw__composer_black"
            tools:text="黒のシンプルな#ワンピース" />
    </RelativeLayout>

</LinearLayout>